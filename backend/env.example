# Gmail API Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here

# Database settings
DATABASE_URL=postgresql://gmail_user:gmail_password@localhost:5432/gmail_backup

# Security settings
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis settings (optional)
REDIS_URL=redis://localhost:6379

# Email sync settings
SYNC_INTERVAL_MINUTES=30
MAX_ATTACHMENT_SIZE_MB=25
SYNC_ATTACHMENTS=true
SYNC_DELETED_EMAILS=false
SYNC_SPAM=false
SYNC_TRASH=false

# AI Analysis settings
AI_ANALYSIS_ENABLED=true
BATCH_ANALYSIS_SIZE=100
SENTIMENT_ANALYSIS_ENABLED=true
CATEGORIZATION_ENABLED=true
SUMMARIZATION_ENABLED=true
PRIORITY_SCORING_ENABLED=true

# Search settings
SEARCH_RESULTS_PER_PAGE=50
MAX_SEARCH_RESULTS=1000

# File storage settings
ATTACHMENTS_DIR=attachments
MAX_FILE_SIZE_MB=50

# Logging settings
LOG_LEVEL=INFO

# CORS settings
CORS_ORIGINS=http://localhost:3002,http://127.0.0.1:3002
CORS_ALLOW_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

# Background tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
